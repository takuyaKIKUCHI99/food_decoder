  <div class="row justify-content-center">
    <div class="col">
      <div class="form-inputs d-flex justify-content-center flex-column text-center item-center">
      <%= simple_form_for @product do |f| %>
        <%= f.input :barcode, as: :hidden %>
        <i class="fas fa-cloud-upload-alt" id="upload-icon"></i>
        <div class="column justify-content-center" id="upload-div">
          <%= f.input :label_photo, label: false, as: :file, accept: 'image/*', capture: 'camera', id:'upload-img' %>
        </div>
        <div class="form-actions p-4 mb-0">
        <%= f.button :submit, value: 'upload', class: 'btn btn-success rounded' %>
      <% end %>
        </div>
        <div class="p-2">
          <%= link_to "Scan another product", scan_barcodes_path %>
        </div>
      </div>
    </div>
  </div>

<% if (@product.ingredients.split & @allergens).any? %>
  <div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content text-center" id="alert">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h5 class="mt-5 font-weight-bold"> Food Restriction Alert </h5>
          <%= image_tag 'danger.png' , :size =>"100x100" %>
          <p class="mt-3">Please check ingredients</p>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content text-center" id="alert">
          <h5 class="modal-body">
            <br><strong> Safe ! </strong></h5>
          <div><%= image_tag 'nice.png', :size =>"100x100" %></div>
          <br>
          <p>Please check ingredients</p>
          <br>
          <div class="mb-3 mx-auto">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-inputs">
        <%= simple_form_for @product do |f| %>
          <%= f.input :barcode %>
          <%= f.input :name %>
          <%= f.input :label_text, as: :text%>
          <%#= f.input :label_photo, label: false, as: :file, accept: 'image/*', capture: 'camera' %>
          <%= f.input :ingredients, as: :text %>
          <%= f.input :front_photo, as: :file, accept: 'image/*', capture: 'camera' %>
          <div class="form-actions text-center mt-3">
          <%= f.button :submit, "Add", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

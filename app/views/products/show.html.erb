
<%= render 'alert'%>
                   
<div class="position-relative">
    <%= cl_image_tag @product.front_photo, height: 300, width: 400,class: 'product-img'%>
</div>
<h3 class="product-name"><%= @product.name %></h3>
<div class="container">
    <div class="ingredient-list">
        <h2 class="text-center mt-4 mb-5">Ingredients</h2>
        <ul id="scroll-list" class="list-group list-group-flush">
            <% @product.ingredients.downcase.split(",").each do |ingredient| %>
                <% if (ingredient.split(" ") & @allergens).any? %>
                    <li class="list-group-item bg-danger"><%= ingredient %></li>
                <% else %>
                    <li class="list-group-item"><%= ingredient %></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>

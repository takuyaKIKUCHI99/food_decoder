<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'logo.png' %>
  <% end %>

  <div class="d-flex align-items-center">
    <%= link_to scan_barcodes_path, class: "nav-link" do%>
      <%= image_tag 'barcode-green.png', height:50, width:50 %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to  user_path(current_user) do %>
        <%= user_avatar(current_user) %>
      <% end %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link session" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link session"%>
    <% end %>
  </div>
</div>

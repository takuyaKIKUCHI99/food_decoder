<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'logo.png' %>
  <% end %>

  <div class="d-flex align-items-center user">
    <% if user_signed_in? %>
      <li class="nav-item dropdown list-unstyled">
        <a class="nav-link p-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= user_avatar(current_user) %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to user_path(current_user), class:"dropdown-item" do %>
            <i class="fas fa-address-card"></i>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "session text-decoration-none", class:"dropdown-item" do %>
            <i class="fas fa-sign-out-alt"></i>
          <% end %>
        </div>
      </li>
    <% else %>
      <%= link_to new_user_session_path, class: "session text-decoration-none" do %>
        <p class="mb-0">Login</p>
      <% end %>
    <% end %>
  </div>
</div>
